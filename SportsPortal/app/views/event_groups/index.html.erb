<p id="notice"><%= notice %></p>

<h1>Event Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Reg start date</th>
      <th>Reg end date</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Is active</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_groups.each do |event_group| %>
      <tr>
        <td><%= event_group.name %></td>
        <td><%= event_group.description %></td>
        <td><%= event_group.reg_start_date %></td>
        <td><%= event_group.reg_end_date %></td>
        <td><%= event_group.start_date %></td>
        <td><%= event_group.end_date %></td>
        <td><%= event_group.is_active %></td>
        <td><%= event_group.venue %></td>
        <td><%= link_to 'Show', event_group %></td>
        <td><%= link_to 'Edit', edit_event_group_path(event_group) %></td>
        <td><%= link_to 'Destroy', event_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

