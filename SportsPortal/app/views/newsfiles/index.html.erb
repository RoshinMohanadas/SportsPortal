<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-10"> <h3 style="margin-top:3px">News</h3> </div>
<div class="col-md-2"> <%= button_to 'Back', root_path, method: "get" %> </div>
</div>

<table class="new_table table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsfiles.each do |newsfile| %>
      <tr>
        <td><%= newsfile.title %></td>
        <td><%= newsfile.description %></td>
        <td><%= link_to 'Show', newsfile %></td>
        <td><%= link_to 'Edit', edit_newsfile_path(newsfile) %></td>
        <td><%= link_to 'Delete', newsfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Newsfile', new_newsfile_path %>
