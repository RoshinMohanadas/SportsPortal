<div style="display:inline-block;float:left;width:20%">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Poc:</strong>
  <%= @team.poc %>
</p>

<p>
  <strong>Pocmobile:</strong>
  <%= @team.pocmobile %>
</p>

<p>
  <strong>Pocemail:</strong>
  <%= @team.pocemail %>
</p>

<p>
  <strong>Registration status</strong>
  <%= @team.status %>
</p>

<% if !(@team.arrivaldate.nil?) %>
<p>
  <strong>Arrivaldate:</strong>
  <%= @team.arrivaldate %>
</p>
<% end %>

<% if !(@team.arrivalloc.nil?) %>
<p>
  <strong>Arrivalloc:</strong>
  <%= @team.arrivalloc %>
</p>
<% end %>

<% if !(@team.modeofarrival.nil?) %>
<p>
  <strong>Mode of arrival:</strong>
  <%= @team.modeofarrival %>
</p>
<% end %>

<% if !(@team.arrivaldetails.nil?) %>
<p>
  <strong>Arrivaldetails:</strong>
  <%= @team.arrivaldetails %>
</p>
<% end %>

<% if !(@team.departuredate.nil?) %>
<p>
  <strong>Departure date:</strong>
  <%= @team.departuredate %>
</p>
<% end %>

<% if !(@team.departureloc.nil?) %>
<p>
  <strong>Departureloc:</strong>
  <%= @team.departureloc %>
</p>
<% end %>

<% if !(@team.modeofdeparture.nil?) %>
<p>
  <strong>Modeofdeparture:</strong>
  <%= @team.modeofdeparture %>
</p>
<% end %>

<% if !(@team.departuredetails.nil?) %>
<p>
  <strong>Departuredetails:</strong>
  <%= @team.departuredetails %>
</p>
<% end %>

<% if !(@team.instructionsfromadmin.nil?) %>
<p>
  <strong>Remarks:</strong>
  <%= @team.instructionsfromadmin %>
</p>
<% end %>

<p>
  <strong>Event:</strong>
  <%= @team.event_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @team.user_id %>
</p>

<% if institute? &&
      current_user.id == @team.user_id &&
      (@team.status.downcase == 'basicinfofilled' || @team.status.downcase == 'rejected') %>
  <%= link_to 'Edit', { :action => :editbasicinfo, :id => @team.id}, method: "get" %>
<% end %>

</div>
<div style="display:inline-block;width:80%">
<table class="table">
<thead>
  <tr>
    <th>Name</th>
    <th>Dob</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Role</th>
    <th>Food preference</th>
    <th>Contact no</th>
  </tr>
</thead>

<tbody>
  <% @team.teammembers.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.dob %></td>
      <td><%= member.email %></td>
      <td><%= member.gender %></td>
      <td><%= member.role %></td>
      <td><%= member.foodpreference %></td>
      <td><%= member.contactno %></td>
    </tr>
  <% end %>
</tbody>
</table>

</div>
<% if event_admin? && (@team.status.downcase == 'pending') %>
<div>
    <%= form_for 'team' do |f| %>
      <div class="field">
        <%= f.label :remarks %>
        <br>
        <%= f.text_area :instructionsfromadmin %>
      </div>
      <div class="hidden-field">
        <%= f.hidden_field :id, value: @team.id%>
      </div>
      <%= f.submit "Approve Team", formaction: 'approve'%>
      <%= f.submit "Reject Team", formaction: 'reject'%>
    <% end %>

</div>
<% end %>

<% if institute? && 
      @team.status.downcase == 'approved' && 
      (@team.travelplanstatus == 'notplanned' || @team.travelplanstatus == 'planrejected') %>
      <%= link_to 'Travel Plan', {:controller => :teams, :action => :edittravelplan, :id => @team.id}, method: "get"%>
<% end %>

<%= link_to 'Back', event_path(@team.event)%>



