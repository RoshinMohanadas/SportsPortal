<div style="display:inline-block;float:left;width:20%">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Poc:</strong>
  <%= @team.poc %>
</p>

<p>
  <strong>Pocmobile:</strong>
  <%= @team.pocmobile %>
</p>

<p>
  <strong>Pocemail:</strong>
  <%= @team.pocemail %>
</p>

<p>
  <strong>Arrivaldate:</strong>
  <%= @team.arrivaldate %>
</p>

<p>
  <strong>Arrivalloc:</strong>
  <%= @team.arrivalloc %>
</p>

<p>
  <strong>Modeofarrival:</strong>
  <%= @team.modeofarrival %>
</p>

<p>
  <strong>Arrivaldetails:</strong>
  <%= @team.arrivaldetails %>
</p>

<p>
  <strong>Departuredate:</strong>
  <%= @team.departuredate %>
</p>

<p>
  <strong>Departureloc:</strong>
  <%= @team.departureloc %>
</p>

<p>
  <strong>Modeofdeparture:</strong>
  <%= @team.modeofdeparture %>
</p>

<p>
  <strong>Departuredetails:</strong>
  <%= @team.departuredetails %>
</p>

<p>
  <strong>Instructionsfromadmin:</strong>
  <%= @team.instructionsfromadmin %>
</p>

<p>
  <strong>Event:</strong>
  <%= @team.event_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @team.user_id %>
</p>

<%= link_to 'Edit', { :action => :editbasicinfo, :id => @team.id}, method: "get" %>

</div>
<div style="display:inline-block;width:80%">
<table class="table">
<thead>
  <tr>
    <th>Name</th>
    <th>Dob</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Role</th>
    <th>Achievements</th>
    <th>Foodpreference</th>
    <th>Contactno</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @team.teammembers.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.dob %></td>
      <td><%= member.email %></td>
      <td><%= member.gender %></td>
      <td><%= member.role %></td>
      <td><%= member.achievements %></td>
      <td><%= member.foodpreference %></td>
      <td><%= member.contactno %></td>
      <td><%= member.team_id %></td>
       <td><%= link_to 'Show'%></td>
      <td><%= link_to 'Edit'%></td>
      <td><%= link_to 'Destroy' %></td>
    </tr>
  <% end %>
</tbody>
</table>

</div>
<% if (current_user.role.downcase == 'eventadmin') && (@team.status.downcase == 'pending') %>
<div>
    <%= form_for 'team' do |f| %>
      <div class="field">
        <%= f.label :remarks %>
        <br>
        <%= f.text_area :instructionsfromadmin %>
      </div>
      <div class="hidden-field">
        <%= f.hidden_field :id, value: @team.id%>
      </div>
      <%= f.submit "Approve Team", formaction: 'approve'%>
      <%= f.submit "Reject Team", formaction: 'reject'%>
    <% end %>

</div>
<% end %>

