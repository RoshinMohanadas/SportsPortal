<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-md-10"> <h3 style="margin-top:3px">Events</h3> </div>
<div class="col-md-2"> <%= button_to 'Back', root_path, method: "get" %> </div>
</div>
<hr>
<h1>Events</h1>

<table id="example" class="new_table table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Eventtype</th>
      <th>Eventrules</th>
      <th>Fest/Meet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.eventtype %></td>
        <td><%= event.eventrules %></td>
        <td><%= event.eventgroup.name %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


